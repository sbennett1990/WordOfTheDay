<Window x:Name="WordWindow" x:Class="Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word of the Day" 
		Background="PapayaWhip" 
		Height="140" Width="400" MinHeight="90" MinWidth="250" MaxWidth="550" 
		VerticalContentAlignment="Center" 
		WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" >
	<StackPanel Margin="5">
		<Label x:Name="wordLable" Margin="5,5,5,0" 
			   HorizontalAlignment="Left" FontWeight="SemiBold" FontFamily="RomanT" FontSize="16" />
		<TextBlock x:Name="definitionBlock" Margin="25,5,10,10" 
				   HorizontalAlignment="Left" VerticalAlignment="Top" 
				   FontSize="14" ScrollViewer.VerticalScrollBarVisibility="Disabled" TextWrapping="Wrap" />
	</StackPanel>
	
